<div class="new-hero-4">
  <div class="text-content">

    <div class="title2">{{ section.settings.title2 }}</div>
    <div class="subtitle2 hide--mobile">{{ section.settings.subtitle2 }}</div>
    <div class="reviews-count hide--mobile">
      <span class="stamped-starrating stamped-badge-starrating" aria-hidden="true"><i class="stamped-fa stamped-fa-star" aria-hidden="true"></i><i class="stamped-fa stamped-fa-star" aria-hidden="true"></i><i class="stamped-fa stamped-fa-star" aria-hidden="true"></i><i class="stamped-fa stamped-fa-star" aria-hidden="true"></i><i class="stamped-fa stamped-fa-star" aria-hidden="true"></i></span>
      <span>{{ section.settings.reviews_count }} reviews</span>
    </div>
    {% if section.settings.btn_text != '' %}
      <a href="{{ section.settings.btn_link }}" class="button button--primary hide--mobile">{{ section.settings.btn_text_mobile }}</a>
    {% endif %}

    <div class="bottom-text hide--mobile">{{ section.settings.bottom_text }}</div>
  </div>
  <div class="image-content">
    <img src="{{ section.settings.image | img_url: '1000x' }}" alt="hero image">
  </div>
  <div class="text-content hide--desktop">
    <div class="subtitle2 hide--desktop">{{ section.settings.subtitle2 }}</div>
    <div class="reviews-count hide--desktop">
      <span class="stamped-starrating stamped-badge-starrating" aria-hidden="true"><i class="stamped-fa stamped-fa-star" aria-hidden="true"></i><i class="stamped-fa stamped-fa-star" aria-hidden="true"></i><i class="stamped-fa stamped-fa-star" aria-hidden="true"></i><i class="stamped-fa stamped-fa-star" aria-hidden="true"></i><i class="stamped-fa stamped-fa-star" aria-hidden="true"></i></span>
      <span>{{ section.settings.reviews_count }} reviews</span>
    </div>
    {% if section.settings.btn_text != '' %}
      <a href="{{ section.settings.btn_link }}" class="button button--primary hide--desktop">{{ section.settings.btn_text_mobile }}</a>
    {% endif %}

    <div class="bottom-text hide--desktop">{{ section.settings.bottom_text }}</div>
  </div>
</div>
{% schema %}
{
  "name": "New Hero 4",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "title1",
      "label": "Title1"
    },
    {
      "type": "text",
      "id": "subtitle1",
      "label": "Subtitle1"
    },
    {
      "type": "text",
      "id": "title2",
      "label": "Title2"
    },
    {
      "type": "text",
      "id": "subtitle2",
      "label": "Subtitle2"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text"
    },
    {
      "type": "text",
      "id": "btn_text_mobile",
      "label": "Button Text Mobile",
      "default": "Get Started ->"
    },
    {
      "type": "url",
      "id": "btn_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "bottom_text",
      "label": "Bottom Text"
    },
    {
      "type": "text",
      "id": "reviews_count",
      "label": "Reviews Count"
    }
  ],
  "presets": [
    {
      "name": "New Hero 4"
    }
  ]
}
{% endschema %}